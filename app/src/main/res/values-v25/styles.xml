<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="android:colorAccent">@color/colorAccent</item>

        <item name="colorSecondary">@android:color/holo_orange_dark</item>

        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
    </style>

    <!-- Theme to apply -->
    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="Widget.ROK.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="titleTextColor">@color/title_action_bar</item>
    </style>

    <style name="ThemeOverlay.ROK.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Surface" />

    <style name="InputLayout" parent="Widget.MaterialComponents.CardView" />

    <style name="Widget.ROK.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="hintTextColor">@color/text_subtitle</item>
        <item name="helperTextTextColor">@color/text_subtitle</item>
        <item name="errorTextColor">@color/text_subtitle_error</item>

        <item name="android:padding">16dp</item>

        <item name="boxCornerRadiusTopStart">@dimen/radius_input</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_input</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_input</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_input</item>
    </style>

    <style name="Widget.ROK.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:colorControlActivated">@color/text_primary</item>
    </style>

    <style name="TextAppearance.ROK.Status" parent="TextAppearance.MaterialComponents.Headline6" />

    <style name="Widget.ROK.ExtendedFloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="rippleColor">@color/ripple_button</item>
        <item name="android:padding">8dp</item>
    </style>

    <dimen name="radius_input">8dp</dimen>
</resources>